<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="website.davidpolania.android.twitterclient">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="website.davidpolania.android.twitterclient.TwitterClientApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name="website.davidpolania.android.twitterclient.login.ui.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="bd2e25b84be3ae3bd4b1d6dfd6c7107e09585fe8" />

        <activity
            android:name="website.davidpolania.android.twitterclient.main.ui.MainActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
